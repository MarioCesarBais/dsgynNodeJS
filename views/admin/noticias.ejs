<%- include('../includes/head.ejs') %>
    <link rel="stylesheet" href="/css/noticia.css">
    </head>

    <body>
        <%- include('../includes/navigation.ejs') %>

            <main>
                <% if (noticias.length > 0) { %>
                    <div class="grid">
                        <% for (let noticia of noticias) { %>
                            <article class="card noticia-item">
                                <header class="card__header">
                                    <h1 class="noticia__title">
                                        <%= noticia.title %>
                                    </h1>
                                </header>
                                <div class="card__image">
                                    <img src="<%= noticia.imageUrl %>" alt="<%= noticia.title %>">
                                </div>
                                <div class="card__content">
                                    
                                    <p class="noticia__description">
                                        <%= noticia.description.substr(0, 100) %>
                                        <span><a href="/noticias/<%= noticia._id %>" class="btn">... Leia Mais</a></span>
                                    </p>
                                </div>
                                <div class="card__actions">
                                    
                                    <div class="card__actions">
                                        <a href="/admin/edit-noticia/<%= noticia._id %>?edit=true" class="btn">Edit</a>
                                        <a href="/noticias/<%= noticia._id %>" class="btn">Details</a>
                                    </div>
                                    <input type="hidden" value="<%= noticia._id %>" name="noticiaId">
                                    <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                                    <button class="btn" type="button" onclick="deleteNoticia(this)">Delete</button>
                                </div>
                            </article>
                            <% } %>
                    </div>
                    <% } else { %>
                        <h1>No Noticias Found!</h1>
                        <% } %>
            </main>
            <%- include('../includes/end.ejs') %>
            <script src="/js/admin.js"></script>